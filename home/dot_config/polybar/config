[colors]
background = #222222
foreground = #eeeeee
primary    = #5294e2

[bar/main]
width = 100%
height = 28
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Ubuntu Mono:size=11;2"
font-1 = "Font Awesome 6 Free:style=Solid:pixelsize=12;2"

modules-left  = launcher workspace
modules-center =
modules-right = pulseaudio deadd powermenu clock

[module/launcher]
type = custom/text
content = ""
content-margin = 4
content-underline = ${colors.primary}
click-left = rofi -show drun

[module/workspace]
type = internal/i3
format = <label-state>
label-focused = %name%
label-unfocused = %name%
label-visible = %name%
label-urgent = %name%

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 2

format-volume = "  %percentage%%"
label-muted = " mute"

[module/deadd]
type = custom/text
content = ""
content-margin = 4
content-underline = ${colors.primary}
click-left = kill -s USR1 $(pidof deadd-notification-center)

[module/powermenu]
type = custom/menu

expand-right = true
format = <label-toggle>
label-toggle = ""
label-toggle-foreground = ${colors.primary}

menu-0-0 = Logout
menu-0-0-exec = i3-msg exit

menu-0-1 = Reboot
menu-0-1-exec = systemctl reboot

menu-0-2 = Poweroff
menu-0-2-exec = systemctl poweroff

[module/clock]
type = internal/date
interval = 5
date = %Y-%m-%d %H:%M
label = %date%

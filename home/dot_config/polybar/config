[settings]
screenchange-reload = true
pseudo-transparency = false

[colors]
background = #dd1f2430
foreground = #f8fbff
primary    = #5294e2
secondary  = #5e81ac
muted      = #7b819b
alert      = #bf616a

[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 30
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
padding-left = 2
padding-right = 2
border-size = 0
module-margin = 2
separator = |
separator-foreground = ${colors.muted}
font-0 = "Ubuntu Mono:size=11;2"
font-1 = "Font Awesome 6 Free:style=Solid:pixelsize=12;2"
font-2 = "Font Awesome 6 Brands:style=Regular:pixelsize=12;2"
modules-left = launcher workspaces
modules-center = windowtitle
modules-right = pulseaudio cpu memory clock session
cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true
wm-restack = i3
tray-position = right
tray-padding = 6

[module/launcher]
type = custom/text
content = ""
content-padding = 2
content-foreground = ${colors.background}
content-background = ${colors.primary}
click-left = rofi -theme /usr/share/rofi/themes/Arc-Dark.rasi -show drun -show-icons -display-drun "Apps"
click-right = rofi -theme /usr/share/rofi/themes/Arc-Dark.rasi -show run -display-run "Command"

[module/workspaces]
type = internal/i3
format = <label-state>
index-sort = true
wrapping-scroll = false
pin-workspaces = true
enable-scroll = false
label-focused = %name%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.primary}
label-focused-padding = 2
label-unfocused = %name%
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 2
label-visible = %name%
label-visible-underline = ${colors.primary}
label-visible-padding = 2
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/windowtitle]
type = internal/xwindow
format = <label>
label = %title%
label-maxlen = 60
label-empty = idle
label-empty-foreground = ${colors.muted}

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 2
format-volume = <label-volume>
label-volume = "  %percentage%%"
label-muted = "  mute"
label-muted-foreground = ${colors.muted}

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
label = "  %percentage%%"

[module/memory]
type = internal/memory
interval = 5
format = <label>
label = "  %percentage_used%%"

[module/clock]
type = internal/date
interval = 5
date = %Y-%m-%d
time = %H:%M
format = <label>
label = "  %date% %time%"

[module/session]
type = custom/text
content = ""
content-padding = 2
content-foreground = ${colors.alert}
click-left = i3-nagbar -t warning -m 'Exit i3?' -B 'Logout' 'i3-msg exit' -B 'Reboot' 'systemctl reboot' -B 'Poweroff' 'systemctl poweroff'

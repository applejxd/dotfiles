# see below for documentation
# https://mise.jdx.dev/configuration.html

[tools]
# CLI
fzf = "0.53.0"  # to prevent bug
ghq = "latest"
bat = "latest"
eza = "latest"
jj ="latest"

# TUI
yazi = "latest"
lazygit = "latest"

# dev
shellcheck = "latest"
hadolint = "latest"
python = "latest"
uv = "latest"
rust = "latest"
go = "latest"
deno = "latest"

# others
chezmoi = "latest"

# see https://mise.jdx.dev/dev-tools/backends/cargo.html
{{- if eq .chezmoi.arch "amd64" }}
ripgrep = "latest"
cargo = "latest"
"cargo:https://github.com/bvaisvil/zenith.git" = { version = "branch:master", features = "nvidia" }
{{- else if eq .chezmoi.arch "arm64" }}
# no latest cargo in arm64
"cargo:ripgrep" = "14.1.1"
"cargo:https://github.com/bvaisvil/zenith.git" = { version = "branch:master"}
{{- end }}

{{- if eq .chezmoi.username "applejxd" }}
yt-dlp = "latest"
{{- end }}

[settings]
# for Tkinter (prebuild binaries doesn't contain GUI modules)
# see https://www.python.jp/install/ubuntu/index.html
python_compile = true
# for task runner
experimental = true
